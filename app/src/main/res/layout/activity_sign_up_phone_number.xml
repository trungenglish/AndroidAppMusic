<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPhoneNumberActivity"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/clickBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/icon_arrowback"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Nhập số điện thoại"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/edtCountry"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:text="Việt Nam"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:onClick="true"
                android:text="+84"
                android:textColor="@color/white"
                android:paddingLeft="20dp"/>

            <EditText
                android:inputType="number"
                android:id="@+id/edtSDT"
                android:layout_width="295dp"
                android:layout_height="50dp"
                android:hint="Số điẹn thoại"
                android:paddingLeft="10dp"
                android:background="@drawable/edittext_background"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Chúng tôi sẽ gửi cho bạn mã qua SMS để xác nhận số điện thoại."
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Đôi khi, chúng tôi có thể gửi cho bạn thông báo dựa trên dịch vụ."
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/dimgrey"
            android:text="Tiếp"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>