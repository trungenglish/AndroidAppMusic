<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFreeActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="136dp"
                android:text="Tạo tài khoản"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="2dp" />

            <ImageView
                android:id="@+id/clickBack"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_arrowback" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Email của bạn là gì?"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/edtEmail"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Đừng quên nhập địa chỉ email của bạn."
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="55dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/dimgrey"
            android:text="Tiếp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="text"/>
    </LinearLayout>
</LinearLayout>